<div class="container" style="padding-top: 10px;">
    <h1 class="my-4">Categories
        <a href="/categories/add" class="btn btn-primary pull-right">Add Category</a>
    </h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
                <th>View Items</th>
            </tr>
        </thead>
        <tbody>
            {{#if categories}}
                {{#each categories}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.category}}</td>
                    <td>
                        <a href="/categories/{{this.id}}" class="btn btn-primary">View Items</a>
                        <a href="/categories/delete/{{this.id}}" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td colspan="3" class="text-center">No categories found.</td>
                </tr>
            {{/if}}
        </tbody>
    </table>
</div>
