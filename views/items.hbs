<div class="container" style="padding-top: 10px;">
    <h1 class="my-4">Items
        <a href="/items/add" class="btn btn-primary pull-right">Add Post</a>
    </h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Item ID</th>
                <th>Title</th>
                <th>Post Date</th>
                <th>Category</th>
                <th>Price</th>
                <th>Published</th>
                <th></th> 
            </tr>
        </thead>
        <tbody>
            {{#if items}}
                {{#each items}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{#formatDate postDate}}{{/formatDate}}</td>
                    <td><a href="/categories/{{this.category}}" class="btn btn-primary">{{this.category}}</a></td>
                    <td>${{this.price}}</td>
                    <td>{{#if this.published}}true{{else}}false{{/if}}</td>
                    <td>
                        <a href="/items/delete/{{this.id}}" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td colspan="7" class="text-center">No items found.</td>
                </tr>
            {{/if}}
        </tbody>
    </table>
</div>
