<div class="row">
  <aside class="col-md-3">
    <h4>Items</h4>
    {{#if data.items}}
      <ul class="list-group">
        {{#each data.items}}
          <a href="/shop/{{this.id}}?category={{../data.viewingCategory}}" class="list-group-item">{{this.title}}</a>
        {{/each}}
      </ul>
    {{else}}
      <p>No items available</p>
    {{/if}}

    <h4>Categories</h4>
    {{#if data.categories}}
      <ul class="list-group">
        {{#each data.categories}}
          <a href="/shop?category={{this.id}}" class="list-group-item">{{this.category}}</a>
        {{/each}}
      </ul>
    {{else}}
      <p>No categories available</p>
    {{/if}}
  </aside>

  <section class="main col-md-9">
    {{#if data.item}}
      <div class="item-details">
        <h2>{{data.item.title}}</h2>
        <img src="{{data.item.featureImage}}" alt="feature Image" style="width:200px; height:auto;">
        <p>{{{safeHTML data.item.body}}}</p>
        <strong>Price:</strong> ${{data.item.price}}<br>
        <strong>Category:</strong> {{data.item.category}}<br>
        <strong>Last Updated:</strong> {{data.item.postDate}}
      </div>
    {{else}}
      <div class="col-md-12 text-center">
        <h2>{{data.message}}</h2>
        <p>Please try another Post / Category</p>
      </div>
    {{/if}}
  </section>
</div>
